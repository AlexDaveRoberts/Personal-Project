%main.container.col-md-10.mt-5
  - if notice
    .alert-info.rounded.p-3.mb-3
      = notice
  - if alert
    .alert-warning.rounded.p-3.mb-3
      = alert
  - if devise_error_messages!
    .alert-warning.rounded.p-3.mb-3
      %ul#register-messages
        - @messages.each do |msg|
          %li= msg

  %h2 Change your password
  #devise-form2
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token
      .field.devise-field
        = f.label :password, value: "New password (#{@minimum_password_length} characters minimum)"
        = f.password_field :password, autofocus: true, autocomplete: "off"
      .field.devise-field
        = f.label :password_confirmation, "Confirm new password"
        = f.password_field :password_confirmation, autocomplete: "off"
      .actions.devise-submit.devise-submit2
        = f.submit "Change Password"
